{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["ES6"],
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "pretty": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES5"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}